@model MagicVilla_Web.Models.DTO.VillaDTO

<form asp-action="DeleteVilla">
    <input asp-for="Id" hidden/>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.Name" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Name" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label asp-for="@Model.Rate" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Rate" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label asp-for="@Model.Details" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="@Model.Details" class="form-control" rows="5" disabled></textarea>
            </div>

            <div class="col-2">
                <label asp-for="@Model.ImageUrl" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.ImageUrl" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label asp-for="@Model.Occupancy" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Occupancy" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label asp-for="@Model.Sqft" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Sqft" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label asp-for="@Model.Amenity" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="@Model.Amenity" class="form-control" disabled></textarea>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" asp-controller="Villa" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn-danger btn form-control" />
            </div>
        </div>
    </div>
</form>
       