@model MagicVilla_Web.Models.ViewModels.VillaNumberCreateVM

<form asp-action="CreateVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa Number</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All"></div>

            <div class="col-2">
                <label asp-for="@Model.VillaNumberDTO.VillaNo" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.VillaNumberDTO.VillaNo" class="form-control" />
                <span asp-validation-for="@Model.VillaNumberDTO.VillaNo" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="@Model.VillaNumberDTO.VillaId" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="@Model.VillaNumberDTO.VillaId" asp-items="@Model.ListVilla" class="form-control">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span asp-validation-for="@Model.VillaNumberDTO.VillaId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="@Model.VillaNumberDTO.SpecialDetails" class="label-control pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.VillaNumberDTO.SpecialDetails" class="form-control" />
                <span asp-validation-for="@Model.VillaNumberDTO.SpecialDetails" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="VillaNumber" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn-success btn form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}                