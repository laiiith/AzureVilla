@model MagicVilla_Web.Models.DTO.RegisterationRequestDTO

<form method="post">
    <div class="container p-5 p-4">
        <div class="row mb-3 card-header text-center">
            <h1 class="accordion-header">Register</h1>
        </div>

        <div class="row card-body">
            <div class="col-6 offset-3 pb-2 mb-3">
                <input asp-for="UserName" type="email" class="form-control" placeholder="Email...." />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="col-6 offset-3 pb-2 mb-3">
                <input asp-for="Name" type="text" class="form-control" placeholder="Name...." />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="col-6 offset-3 pb-2 mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password...." />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="col-6 offset-3 pb-2 mb-3">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>

                </select>
                <span class="text-danger" asp-validation-for="Role"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <button class="form-control btn-success" type="submit" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 